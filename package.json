{
	"name": "@kompanie/reagenz",
	"version": "12.0.0",
	"license": "MIT",
	"main": "index.js",
	"repository": "github:kompanie-dev/reagenz",
	"type": "module",
	"sideEffects": false,
	"files": [
		"/cli",
		"/source",
		"/template-project"
	],
	"scripts": {
		"build": "esbuild index.js --bundle --format=esm --target=esnext --outfile=build/reagenz.js",
		"build:minified": "esbuild index.js --bundle --format=esm --minify --target=esnext --outfile=build/reagenz.min.js",
		"lint": "eslint",
		"start": "vite --force --port 8000",
		"test": "vitest run --coverage --workspace=vitest.workspace.js",
		"test:watch": "vitest --coverage --watch --workspace=vitest.workspace.js"
	},
	"bin": {
		"reagenz": "cli/index.js"
	},
	"devDependencies": {
		"@vitest/browser": "^2.1.4",
		"@vitest/coverage-v8": "^2.1.4",
		"esbuild": "0.24.0",
		"eslint": "^9.14.0",
		"playwright": "^1.48.2",
		"vite": "^5.4.10",
		"vitest": "^2.1.4"
	}
}